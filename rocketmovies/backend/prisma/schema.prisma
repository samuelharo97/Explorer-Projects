generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_user   String    @id() @default(uuid())
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @default(now()) @db.Timestamp(6)
  deletedAt DateTime? @db.Timestamp(6)
  name      String    @db.VarChar(100)
  email     String    @unique() @db.VarChar(50)
  avatar    String    @db.VarChar
  password  String    @db.VarChar
  salt      String    @db.VarChar
  movie     Movie[]
  tag       Tag[]

  @@map("rm_user")
}

model Movie {
  id_movie    String   @id @default(uuid())
  title       String
  description String
  rating      Int
  user        String
  user_id     User     @relation(fields: [user], references: [id_user])
  createdAt   DateTime @default(now()) @db.Timestamp(6)
  updatedAt   DateTime @default(now()) @db.Timestamp(6)
  tags        Tag[]

  @@map("rm_movie")
}

model Tag {
  id_tags String @id @default(uuid())
  movie   String
  user    String
  note_id Movie  @relation(fields: [movie], references: [id_movie])
  user_id User   @relation(fields: [user], references: [id_user])
  name    String

  @@map("rm_tag")
}
